{
	"pluginAlias": "ElkM1",
	"pluginType": "platform",
	"singular": false,
	"schema": {
		"type": "object",
		"properties": {
			"name": {
				"title": "Name",
				"type": "string",
				"required": true
			},
			"elkAddress": {
				"title": "ELK M1 IP Address",
				"type": "string",
				"format": "ipv4",
				"required": true
			},
			"elkPort": {
				"title": "Elk M1 port",
				"type": "integer",
				"default": 2101,
				"required": true
			},
			"area": {
				"title": "Area",
				"type": "integer",
				"default": 1,
				"minimum": 1,
				"maximum": 8,
				"required": true
			},
			"keypadCode": {
				"title": "Keypad code",
				"type": "integer",
				"required": true
			},
			"zoneTypes": {
				"type": "array",
				"required": true,
				"items": {
					"title": "Zone",
					"type": "object",
					"properties": {
						"zoneNumber": {
							"title": "Zone number",
							"type": "integer",
							"required": true
						},
						"zoneType": {
							"title": "Zone type",
							"type": "string",
							"oneOf": [{
									"title": "Contact",
									"enum": ["contact"]
								},
                                {
									"title": "Garage",
									"enum": ["garage"]
								},
								{
									"title": "Motion",
									"enum": ["motion"]
								},
								{
									"title": "Smoke",
									"enum": ["smoke"]
								}
							]
						}
					}
				}
			},
			"garageDoors":{
			   "type":"array",
			   "required":false,
			   "items": {
			       "title":"Garage door",
			       "type":"object",
			       "properties":{
			           "name":{
			               "title":"Name",
			               "type":"string",
			               "required":true
			           },
			            "stateZone":{
			               "title":"State zone",
			               "type":"integer",
			               "required":true,
                           "description": "The zone that indicates whether the door is open or closed"
			           },
			            "openOutput":{
			               "title":"Open contact",
			               "type":"integer",
			               "required":true,
                           "description": "The contact (relay) that is pulsed to open the door"
			           },
			            "closeOutput":{
			               "title":"Close contact",
			               "type":"integer",
			               "required":true,
                           "description": "The contact (relay) that is pulsed to close the door"
			           }
			       }
			   }
			},
            "includedTasks":{
                "title":"Included task IDs",
                "type":"array",
                "items":"integer"
            },
            "includedOutputs":{
                "title":"Included output IDs",
                "type":"array",
                "items":"integer"
            }			
		}
	},
	"form": null,
	"display": null
}